<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:padding="20dp"
    android:layout_marginVertical="8dp"
    android:background="@drawable/rounded_corner"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="noun"
        android:textSize="20dp"
        android:textStyle="bold"
        android:id="@+id/partofspeechtv"
        android:textColor="@color/myprimary"></TextView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Definations: "
        android:id="@+id/defination"
        android:textSize="16sp"
        android:textStyle="bold"
        ></TextView>

<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:text="1 defination \n\n2defination \n\n3 anotherdefination"
    android:id="@+id/definationtv"
    ></TextView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Synonyms: "
        android:id="@+id/synonyms_title_tv"
        android:textSize="16sp"
        android:textStyle="bold"
        ></TextView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text=" ram rama  hari"
        android:id="@+id/synoinymstv"
        ></TextView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="antonyms: "
        android:id="@+id/antonyms_tv"
        android:textSize="16sp"
        android:textStyle="bold"
        ></TextView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="1 ravan ravan  ravan"
        android:id="@+id/antonymstv"
        ></TextView>



</LinearLayout>